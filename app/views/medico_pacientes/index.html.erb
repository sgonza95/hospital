<p id="notice"><%= notice %></p>

<h3>Ficha Medico Pacientes</h3>

<table class=" table table-bordered table-hover">
  <thead>
    <tr>
      <th>Medico</th>
      <th>Paciente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medico_pacientes.each do |medico_paciente| %>
      <tr>
        <td><%= medico_paciente.medico.nombremedico %></td>
        <td><%= medico_paciente.paciente.nombrepaciente %></td>
        <td><%= link_to 'Show', medico_paciente %></td>
        <td><%= link_to 'Edit', edit_medico_paciente_path(medico_paciente) %></td>
        <td><%= link_to 'Destroy', medico_paciente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

