<p id="notice"><%= notice %></p>

<h3>Ficha Pacientes</h3>

<table class=" table table-bordered table-hover">
  <thead>
    <tr>
      <th>Nombrepaciente</th>
      <th>Apepaciente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.nombrepaciente %></td>
        <td><%= paciente.apepaciente %></td>
        <td><%= link_to 'Show', paciente %></td>
        <td><%= link_to 'Edit', edit_paciente_path(paciente) %></td>
        <td><%= link_to 'Destroy', paciente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

